{
  "name": "portfolio",
  "version": "1.0.0",
  "scripts": {
    "build": "vite build",
    "dev": "NODE_NO_WARNINGS=1 concurrently \"./node_modules/.bin/vite --port 3000 --host localhost\" \"pnpm run dev:server\"",
    "dev:server": "cd backend && bash -c 'source ../.env && go run .'",
    "env": "bash -c 'source .env && cd backend && go run .'",
    "start": "./run.sh",
    "preview": "vite preview",
    "lint": "pnpm run lint:frontend && pnpm run lint:go",
    "lint:frontend": "biome check src/",
    "lint:go": "cd backend && go fmt ./... && go vet ./... && ~/go/bin/golangci-lint run",
    "format": "pnpm run format:frontend && pnpm run format:go",
    "format:frontend": "biome format --write src/",
    "format:go": "cd backend && go fmt ./...",
    "test": "pnpm run test:go",
    "test:go": "cd backend && go test -v ./...",
    "test:coverage": "cd backend && go test -v -cover ./...",
    "test:bench": "cd backend && go test -bench=. ./...",
    "go-install": "go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest"
  },
  "dependencies": {
    "preact": "^10.19.0",
    "preact-router": "^4.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@preact/preset-vite": "^2.8.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "sass": "^1.91.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.3"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
