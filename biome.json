{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noNodejsModules": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noImportAssign": "off",
        "noArrayIndexKey": "warn"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useNodejsImportProtocol": "off",
        "useNumberNamespace": "warn"
      },
      "complexity": {
        "noExtraBooleanCast": "off",
        "noUselessTernary": "warn"
      }
    }
  },
  "files": {
    "ignore": ["node_modules/", "static/ts/main.js", "pnpm-lock.yaml"]
  }
}